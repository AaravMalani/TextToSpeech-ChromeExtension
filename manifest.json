{
    "manifest_version": 2,
    "name": "Text to Speech",
    "author": "Yashkapure06",
    "description": "Reads selected text aloud",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "activeTab",
        "https://*/*",
        "http://*/*",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    }
}
